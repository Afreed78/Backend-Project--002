<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a class="text-blue-500" href="/">Back to Home</a>
        <h1 class="text-3xl mt-10 tracking-tighter mb-3">All Users</h1>
        
        <!-- Flex container for side-by-side placement -->
        <div class="users flex gap-5"> 
            <!-- Correct if statement without the extra = sign -->
            <% if (users.length > 0) { %> 
                <!-- Loop through the users array and render the user cards -->
                <% users.forEach(function(user){ %>
                    <div class="user w-72 max-w-xs p-5 bg-zinc-800 rounded-lg flex flex-col justify-between">
                        <div class="w-full h-72 bg-zinc-700 rounded-lg overflow-hidden">
                            <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="profile">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex gap-3 mt-10">
                            <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit user</a>
                            <a class="text-red-500" href="/delete/<%= user._id %>">Delete user</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>  
                <!-- Display when there are no users -->
                <h3 class="text-zinc-500"> No Users Yet</h3>
            <% } %>  
        </div>
    </div>
</body>
</html>
